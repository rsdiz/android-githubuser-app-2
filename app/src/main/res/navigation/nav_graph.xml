<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/usersFragment">

    <fragment
        android:id="@+id/usersFragment"
        android:name="id.rosyid.exploregithubusers.ui.explore.users.UsersFragment"
        android:label="@string/app_name"
        tools:layout="@layout/users_fragment" >
        <action
            android:id="@+id/action_usersFragment_to_userDetailFragment"
            app:destination="@id/userDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/userDetailFragment"
        android:name="id.rosyid.exploregithubusers.ui.explore.userdetail.UserDetailFragment"
        android:label="@string/detail_users_title"
        tools:layout="@layout/user_detail_fragment" >
        <argument
            android:name="username"
            app:argType="string"
            android:defaultValue="rsdiz" />
    </fragment>
</navigation>